{
  // Appium 配置文件示例
  // 这是一个完整的配置模板，包含常用的 desired capabilities 和项目特定配置
  
  // ============================================================
  // Appium 服务器配置
  // ============================================================
  
  "server_url": "http://127.0.0.1:4723/wd/hub",
  // Appium Server 地址
  // - 本地运行: http://127.0.0.1:4723/wd/hub
  // - 远程服务器: http://remote-ip:4723/wd/hub
  
  // ============================================================
  // 大麦票务配置
  // ============================================================
  
  "keyword": "演出名称或关键词",
  // 搜索关键字，用于在大麦 App 中搜索目标演出
  // 示例: "张学友演唱会", "音乐剧猫"
  
  "users": [
    "观演人姓名1",
    "观演人姓名2"
  ],
  // 观演人列表，购票时自动选择
  // - 如果为空数组 []，表示不选择观演人（测试模式）
  // - 确保姓名与大麦账户中的实名信息一致
  
  "city": "北京",
  // 城市名称
  // 示例: "北京", "上海", "广州", "深圳"
  
  "date": "2025-10-18",
  // 演出日期（可选）
  // 格式: YYYY-MM-DD 或 MM.DD
  // 如果演出只有一场，可以留空
  
  "price": "看台",
  // 价格描述（用于显示或参考）
  // 示例: "VIP", "看台", "内场"
  
  "price_index": 0,
  // 价格索引（从 0 开始）
  // 0 表示第一个价格选项，1 表示第二个，以此类推
  // 通常按从低到高或从上到下的顺序
  
  "if_commit_order": false,
  // 是否自动提交订单
  // - false: 仅测试，不实际提交订单（推荐用于调试）
  // - true: 自动提交订单（正式抢票时使用，请谨慎！）
  
  // ============================================================
  // 设备配置 (Device Capabilities)
  // ============================================================
  
  "device_caps": {
    "platformName": "Android",
    // 平台名称: "Android" 或 "iOS"
    
    "platformVersion": "13",
    // Android/iOS 版本号
    // 查看方式: 设置 > 关于手机 > Android 版本
    
    "deviceName": "我的手机",
    // 设备名称（自定义，用于日志显示）
    
    "udid": "设备序列号",
    // 设备唯一标识符
    // 获取方式: adb devices -l
    // 示例: "emulator-5554", "1234567890ABCDEF"
    
    "automationName": "UiAutomator2",
    // 自动化引擎
    // - Android 推荐: "UiAutomator2"
    // - iOS: "XCUITest"
    
    "appPackage": "cn.damai",
    // 应用包名（Android）
    // 大麦 App: cn.damai
    
    "appActivity": "cn.damai.launcher.activity.SplashActivity",
    // 启动 Activity（Android）
    // 大麦 App 启动页
    
    "noReset": true,
    // 不重置应用数据
    // - true: 保留登录状态和应用数据（推荐）
    // - false: 每次启动都清空数据
    
    "fullReset": false,
    // 完全重置
    // - false: 不卸载应用（推荐）
    // - true: 卸载并重新安装应用
    
    "unicodeKeyboard": true,
    // 使用 Unicode 键盘（支持中文输入）
    
    "resetKeyboard": true,
    // 会话结束后恢复原键盘
    
    "newCommandTimeout": 300,
    // 命令超时时间（秒）
    // 超过此时间未收到新命令，会话将自动关闭
    
    "autoGrantPermissions": true
    // 自动授予应用权限
  },
  
  // ============================================================
  // 高级配置（可选）
  // ============================================================
  
  "wait_timeout": 1.5,
  // 等待超时时间（秒）
  // 用于等待页面元素加载
  // - 开售冲刺: 1.4~1.6
  // - 守候回流: 1.8~2.2
  
  "retry_delay": 1.0,
  // 重试延迟（秒）
  // 失败后等待多久重试
  // - 开售冲刺: 1.0~1.2
  // - 守候回流: 1.5
  
  "max_retries": 3,
  // 最大重试次数
  
  // ============================================================
  // 多设备配置示例（规划中）
  // ============================================================
  
  "devices": [
    // 多设备顺序执行（功能规划中）
    {
      "udid": "device1_udid",
      "deviceName": "设备1",
      "platformVersion": "13"
    },
    {
      "udid": "device2_udid", 
      "deviceName": "设备2",
      "platformVersion": "12"
    }
  ]
}
